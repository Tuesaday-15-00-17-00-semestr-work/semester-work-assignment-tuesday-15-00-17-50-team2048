<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.frontend.MainController">
    <left>
        <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" left="10" right="10" bottom="10"/>
            </padding>
                <Button text="Books" fx:id="btnBooks" onAction="#onBooksClick"/>
                <Button text="My Books" fx:id="btnMyBooks" onAction="#onMyBooksClick"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Welcome to the Main Application!"/>
        </VBox>
    </center>
</BorderPane>